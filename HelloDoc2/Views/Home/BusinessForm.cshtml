@model DAL.ViewModel.BusinessData;

<head>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/business.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
</head>

<div class="container patient-main" id="fordark">
    <div class="container-fluid">
        <a class="back">
            <button onclick="@("window.location.href ='" + @Url.Action("Submit_Request","Home") + "'");" class="back-btn mt-5">
                &lt; Back
        </button>
        </a>
    </div>
    <form method="post" asp-controller="Home" asp-action="BusinessForm">


    <div class="container-fluid formpart">
        <h2 class="header-text">Business Information</h2>
        <div class="row mt-4">
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="text" class="form-control" id="floatingInput" placeholder="B_FirstName" asp-for="B_FirstName" >
                <label for="floatingInput" style="margin-left: 1em">Your First Name</label>
                    <span asp-validation-for="B_FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="text" class="form-control" id="floatingPassword" placeholder="B_LastName" asp-for="B_LastName">
                    <span asp-validation-for="B_LastName" class="text-danger"></span>

                <label for="floatingInput" style="margin-left: 1em">Your Last Name</label>
            </div>
            <div class="form-floating mb-3 col-md-6 col-sm-12 col-lg-6">
                <input id="phone" type="tel" class="form-control" style="height: 60px;" asp-for="B_Phone">
                    <span asp-validation-for="B_Phone" class="text-danger"></span>

            </div>
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="email" class="form-control" placeholder="name@example.com" asp-for="B_Email">
                    <label for="B_Email" style="margin-left: 1em">Your Email</label>
                    <span asp-validation-for="B_Email" class="text-danger"></span>

            </div>
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="text" class="form-control" id="floatingPassword" placeholder="Relation" asp-for="Relation">
                <label for="floatingInput" style="margin-left: 1em">Relation With Patient</label>
                    <span asp-validation-for="Relation" class="text-danger"></span>

            </div>
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="number" class="form-control" id="floatingPassword" placeholder="CaseNumber" asp-for="CaseNumber">
                <label for="floatingInput" style="margin-left: 1em">Case Number (Optional)</label>
            </div>
        </div>

        <h2 class="same-text">Patient Information</h2>
        <div class="form-floating input-detail">
            <input type="text" class="form-control" id="floatingPassword" style="height: 100px"
                   placeholder="Enter Brief Details About Symptoms(Optional)" asp-for="Symptoms">
            <label for="floatingInput">Enter Brief Details About Symptoms(Optional)</label>
        </div>
        <div class="row mt-4">
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="text" class="form-control" id="floatingInput" placeholder="FirstName" asp-for="FirstName">
                <label for="floatingInput" style="margin-left: 1em">First Name</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="text" class="form-control" id="floatingPassword" placeholder="LastName" asp-for="LastName">
                <label for="floatingInput" style="margin-left: 1em">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="date" class="form-control" id="floatingPassword" placeholder="12/11/2023" asp-for="Birthdate">
                <label for="floatingDate" style="margin-left: 1em">Date Of Birth</label>
                    <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>
        </div>

        <h2 class="same-text">Patient Contact Information</h2>
        <div class="row mb-4">
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                    <input type="email" class="form-control" asp-for="Email">
                <label class="t1" for="Email" style="margin-left: 1em">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating col-md-6 col-lg-6 mb-3">
                <input type="tel" class="form-control pt-3 pb-3" id="phone1" asp-for="Phone">
                    <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <h2 class="same-text">Patient Location</h2>
        <div class="row mt-4">
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="text" class="form-control" id="floatingInput" placeholder="Street" asp-for="Street">
                <label for="floatingInput" style="margin-left: 1em">Street</label>
                    <span asp-validation-for="Street" class="text-danger"></span>

            </div>
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="text" class="form-control" id="floatingPassword" placeholder="City" asp-for="City">
                <label for="floatingInput" style="margin-left: 1em">City</label>
                    <span asp-validation-for="City" class="text-danger"></span>

            </div>
                <div class="form-floating mb-3 col-md-6 col-sm-12">
                    <select class="form-select w-100" id="regionselect" aria-label="Floating label select example" asp-for="RegionId">
                        <option value="" selected disabled>All</option>
                        @foreach (var obj in Model.regions)
                        {
                            <option value="@obj.RegionId">
                                @obj.Name
                            </option>
                        }
                    </select>
                        <label for="regionselect" class="form-label ms-2">State</label>
                    <span asp-validation-for="RegionId" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="text" class="form-control" id="floatingInput" placeholder="ZipCode" asp-for="ZipCode">
                <label for="floatingInput" style="margin-left: 1em">Zip Code</label>
                    <span asp-validation-for="ZipCode" class="text-danger"></span>

            </div>
            <div class="form-floating mb-3 col-md-6 col-sm-12">
                <input type="text" class="form-control" id="floatingPassword" placeholder="Room" asp-for="Room">
                <label for="floatingInput" style="margin-left: 1em">Room # / Suite (Option)</label>
            </div>
        </div>
        <div class="d-flex justify-content-end mt-4 mb-3">
            <button class="btn main-btn submit" data-bs-toggle="modal" data-bs-target="#exampleModalCenter" type="submit">Submit</button>
                <button class="btn main-btn cancel" type="reset">cancel</button>
        </div>
    </div>
    </form>
</div>
