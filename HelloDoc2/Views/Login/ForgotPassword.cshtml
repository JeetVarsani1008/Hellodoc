@model DAL.ViewModel.LoginVm;@{    Layout = "~/Views/Shared/_LayoutNone.cshtml";}<div class="container-fluid">    <div class="row">        <div class="col-md-6 leftside">            <img class="login-img" src="~/SRS Screen Shorts/11116016_415.jpg" alt="login-img">        </div>        <div class="col-md-6 rightside">            <div class="darkmode">                <i id="darkmode" class="bi bi-moon"></i>            </div>            <div class="utext">                <div class="hallodocimg">                    <img class="hallodocimg" src="~/SRS Screen Shorts/doctorlogo.png" alt="hallodocimg">                </div>                <div>                    <p class="logintxt">Login To Your Account</p>                </div>                <form asp-action="ResetPasswordRequest" asp-controller="Login" method="post">                    <div class="form-floating mb-1" style="position: relative;">                        <i class="bi bi-person-circle" style="position: absolute; right: 1em; top: 1em;"></i>                        <input type="email" class="form-control" id="floatingInput" mailto:placeholder="name@example.com" asp-for="Email">                        <label for="floatingInput">Username</label>                        <span asp-validation-for="Email" class="text-danger"></span>                    </div>                    <div>                        <button type="submit" class="btn btn-primary" id="loginbtn">                            Reset Password                        </button>                    </div>                </form>                <div>                    <a class="forgotpass" onclick="window.location.href='@Url.Action("Login","Login")'">Back to Login</a>                </div>            </div>        </div>    </div></div>@section Scripts {    @{        await Html.RenderPartialAsync("_ValidationScriptsPartial");    }}