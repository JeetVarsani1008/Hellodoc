@model DAL.ViewModel.ProviderVm;<div class="modal fade" id="myModelContactProvider" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">    <div class="modal-dialog modal-dialog-centered">        <div class="modal-content">            <form method="post" asp-action="AdminSendMailToProvider" asp-controller="Admin">                <input type="hidden" id="physicianId" name="phyId" value="" />                <div class="modal-header bg-info text-white">                    <h1 class="modal-title fs-5" id="exampleModalLabel">Contact Your Provider</h1>                    <button type="button" class="btn-close " data-bs-dismiss="modal" aria-label="Close"></button>                </div>                <div class="modal-body p-sm-2 px-0">                    <div class="container-fluid">                        <div class="row">                            <span class="text-muted">Choose Communication to send message</span>                        </div>                        <div>                            <input type="radio" id="sms" name="ContactType" value="@Model.SMS" class="both" asp-for="SMS">                            <label for="sms">SMS</label><br>                            <input type="radio" id="email" value="@Model.Email" name="ContactType" class="both" asp-for="Email">                            <label for="email">Email</label><br>                            <input type="radio" id="both" name="ContactType" value="both" class="both" asp-for="communication">                            <label for="both">Both</label><br>                        </div>                        <div class="row pt-3">                            <div class="form-floating mt-3">                                <textarea class="form-control" placeholder="Leave a comment here" id="notes" style="height: 100px" asp-for="Description"></textarea>                                <label for="floatingTextarea2" class="text-muted ms-2">                                    <span>Message</span>                                </label>                            </div>                        </div>                    </div>                </div>                <div class="modal-footer border-0">                    <button type="submit" class="btn btn-info text-white" data-bs-dismiss="modal" id="SendButton">Send</button>                    <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal" aria-label="Close">Cancel</button>                </div>            </form>        </div>    </div></div><div id="jeet"></div>