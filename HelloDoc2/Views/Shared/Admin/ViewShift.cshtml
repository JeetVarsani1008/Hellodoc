@model DAL.ViewModel.ViewShiftVm;<div class="modal fade" id="ViewShiftContent" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">    <div class="modal-dialog modal-dialog-centered">        <div class="modal-content p-0">            <div class="modal-header" style="background-color: #01bce9 !important; color: white !important;">                <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit Shift</h1>                <button type="button" class="btn" data-bs-dismiss="modal" aria-label="Close">                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-x-lg" viewBox="0 0 16 16">                        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />                    </svg>                </button>            </div>            <form asp-action="ViewShiftPost" asp-controller="Admin" method="post">                <input type="hidden" asp-for="PhysicianId" value="@Model.PhysicianId" />                <input type="hidden" asp-for="ShiftId" value="@Model.ShiftId" />                <input type="hidden" asp-for="ShiftDetailId" value="@Model.ShiftDetailId" />                <div class="modal-body pb-0">                    <div class="mb-3">                        <div class="form-floating mb-3">                            <input asp-for="Region" type="text" class="form-control" id="" placeholder="" disabled />                            <label for="regions">Region</label>                        </div>                        <div class="form-floating">                            <input asp-for="PhysicianName" type="text" class="form-control" id="" placeholder="" disabled />                            <label for="region">Physician Name</label>                        </div>                    </div>                    <div class="form-floating">                        <input asp-for="StartDate" type="date" class="form-control enabled" disabled>                        <label>ShiftDate</label>                    </div>                    <div class="row g-2 mt-3 mb-3">                        <div class="col-md-6">                            <div class="form-floating">                                <input asp-for="StartTime" type="time" id="time" class="form-control enabled" placeholder="StartTime"  disabled>                                <label for="StartTime">Start</label>                            </div>                        </div>                        <div class="col-md-6">                            <div class="form-floating">                                <input asp-for="EndTime" type="time" class="form-control enabled" id="time" placeholder="EndTime" disabled>                                <label for="EndTime">End</label>                            </div>                        </div>                    </div>                    <div class="modal-footer" style="border-color:white;">                        <button type="submit" name="command" value="1" class="btn btn-primary me-1" style="background-color: #01bce9;border-color: #01bce9;" id="returnbtn">Return</button>                        <button type="button" class="btn btn-primary me-1" style="background-color: #01bce9;border-color: #01bce9;" id="editbtn">Edit</button>                        <button type="submit" name="command" value="2" class="btn btn-primary me-1" style="background-color: #01bce9;border-color: #01bce9; display:none" id="savebtn">Save</button>                        <button type="button" data-bs-dismiss="modal" aria-label="Close" class="btn btn-outline-primary me-1" style="display:none" id="cancelbtn">Cancel</button>                        <button type="submit" name="command" value="3" class="btn btn-danger">Delete</button>                    </div>                </div>            </form>        </div>    </div></div><!-- Include SweetAlert --><script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script><script>    var cancelbtn = document.getElementById('cancelbtn');    var savebtn = document.getElementById('savebtn');    var editbtn = document.getElementById('editbtn');    //for delete button only     var deletebtn = document.querySelector('button[value="3"]');    var enabled = document.getElementsByClassName('enabled');    editbtn.addEventListener('click', function () {        for (let i = 0; i < enabled.length; i++) {            enabled[i].disabled = false;        }        savebtn.style.display = 'block';        this.style.display = 'none';        cancelbtn.style.display = 'block';    });    deletebtn.addEventListener('click', function (event) {        event.preventDefault();        console.log('Delete button clicked');        var commandValue = this.value;        Swal.fire({            title: 'Are you sure?',            text: "You won't be able to revert this!",            icon: 'warning',            showCancelButton: true,            confirmButtonColor: '#d33',            cancelButtonColor: '#3085d6',            confirmButtonText: 'Yes, delete it!'        }).then((result) => {            // commandInput.remove();            if (result.isConfirmed) {                // Proceed with form submission                var form = deletebtn.closest('form');                var commandInput = document.createElement('input');                commandInput.setAttribute('type', 'hidden');                commandInput.setAttribute('name', 'command');                commandInput.setAttribute('value', commandValue);                form.appendChild(commandInput);                deletebtn.closest('form').submit();            }        });    });</script>