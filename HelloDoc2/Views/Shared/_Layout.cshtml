<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelloDoc2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HelloDoc2.styles.css" asp-append-version="true" />

    <!-- bootstrap CSS  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

     @* TOASTER *@
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body class="h-100" data-bs-theme="light" id="simplebody">
    <div>
        <div class="header container-fluid d-flex justify-content-between">
            <img src="~/SRS Screen Shorts/doctorlogo.png" alt="doctor logo" class="img-fluid header-logo">
            <i class="bi bi-moon moon-icon" id="toggletheme" onclick="changeTheme()"></i>
        </div>
    </div>

    <div class="container-fluid h-100" style="position:absolute">
        <main role="main" class="h-100">
            <partial name="_ToastNotification" />
            @RenderBody()
            <footer class="bg-dark container-fluid mb-0" style="position:relative">
                <div class="footer d-flex justify-content-end">
                    <div>
                        <a class="footertext">Terms of Conditions</a> <span class="bg-secondary">|</span> <a class="footertext2">Privacy</a>
                    </div>
                </div>
            </footer>
        </main>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous">
    </script>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
