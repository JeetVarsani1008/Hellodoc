@model DAL.ViewModel.ShiftViewModel;@{    Layout = "~/Views/Shared/_LayoutMainAdminDashboard.cshtml";}<style>    input[type="checkbox"] {        transform: scale(1.3);    }</style><div class="container-fluid bg-body-tertiary vh-100">        <div class="container d-flex flex-column mt-3 gap-2 p-3 ">            <div class="container d-flex justify-content-between p-0 my-2">                <div>                    <p class="h4">Requested Shift</p>                </div>            </div>            <div class="row shadow">                <div class="d-flex justify-content-between align-items-center ps-3 my-3">                    <select class="form-select mb-2 w-25" aria-label="Default select example" id="selectProviderRegion" onchange="regionFilter(this.value)">                        <option value="" selected>All Region</option>                    @foreach(var obj in Model.regions)
                    {
                        <option value="@obj.RegionId">@obj.Name</option>
                    }                                            </select>                    <div>                        <button class="btn btn-success me-2 text-white rounded-1 shadow " onclick="ViewCurrentMonthShift()">                            View Current Months Shift                        </button>                        <button class="btn bg-success text-white me-2 shadow" id="approveSelected" onclick="approveSelectedShift()">Approved Selected</button>                        <button class="btn bg-danger text-white shadow" id="deleteSelected" onclick="deleteSelectedShift()">Delete Selected</button>                    </div>                </div>                <div id="shiftContent" class="px-0">                </div>            </div>        </div></div><script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script><script>    var regionId;    var CurrentPage;    function regionFilter(regionId) {        $.ajax({            url: "/Admin/RequestedShiftTable",            type: "POST",            data: { regionId: regionId },            dataType: "html",            success: function (data) {                $("#shiftContent").html(data);            },            error: function () {                                $("#shiftContent").html('An error has occurred');            }        });    }    $(document).ready(function () {        regionFilter(regionId, CurrentPage = 1);    });    function changepage(CurrentPage) {        CurrentPage = CurrentPage;        regionFilter(regionId, CurrentPage);    }    $("#selectProviderRegion").on("input", function () {        regionId = $(this).val();        CurrentPage = 1;        regionFilter(regionId, CurrentPage);    })    function ViewCurrentMonthShift() {        window.location = "/Admin/Scheduling";        localStorage.setItem('type', 'Month');    }</script> 